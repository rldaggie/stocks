<%= page_header do %>
  <div class="btn-toolbar pull-right">
    <div class="btn-group">
      <%= link_to edit_company_path(@company), class: 'btn btn-warning' do %>
        <%= icon_white 'icon-edit' %>
        Edit Company
      <% end %>
    </div><!--// .btn-group -->
    
    <div class="btn-group">
      <%= link_to '#', class: 'btn btn-info dropdown-toggle', data: { toggle: 'dropdown' } do %>
        <%= icon_white 'icon-list' %>
        Financial Reports
        <%= caret %>
      <% end %>
      <ul class="dropdown-menu">
        <li>
          <%= link_to 'Annual', annual_company_financial_reports_path(@company) %>
        </li>
        <li>
          <%= link_to 'Quarterly', quarterly_company_financial_reports_path(@company) %>
        </li>
      </ul>
    </div><!--// .btn-group -->
    
    <div class="btn-group">
      <%= link_to companies_path, class: 'btn' do %>
        <%= icon 'icon-th-list' %>
        All Companies
      <% end %>
    </div><!--// .btn-group -->
  </div><!--// .btn-group -->
  
  <h1><%= @company.name %> <small><%= @company.ticker.upcase %></small></h1>
<% end %>

<p>Nothing to show...yet</p>