<%= simple_form_for(@company, :html => { :class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  
  <div class="form-inputs">
    <%= f.input :ticker %>
  </div>
  
  <div class="form-inputs">
    <%= f.input :cik_number, :label => "CIK Number", :hint => (link_to 'SEC Search Link', "http://www.sec.gov/cgi-bin/browse-edgar?company=#{u @company.name}&match=contains&action=getcompany", target: '_blank') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
