<div id="<%= dom_id %>" class="tab-pane">
  <table class="table table-striped table-condensed financial_statements">
    <colgroup>
      <col class="span7">
      <col class="span1">
      <col class="span1">
      <col class="span1">
      <col class="span1">
      <col class="span1">
    </colgroup>
    <thead>
      <tr>
        <th><%= t 'financial_report.period_ending' %></th>
        <!-- ko foreach: $root.periods -->
          <th data-bind="text: $data" class="align_right"></th>
        <!-- /ko -->
      </tr>
    </thead>

    <tbody>
      <!-- ko foreach: groups -->
        <tr>
          <td colspan="<%= colspan %>">&nbsp;</td>
        </tr>
        <!-- ko foreach: items -->
          <tr class="toggle_row value_row">
            <td data-bind="text: name"></td>
            <!-- ko foreach: values -->
              <td data-bind="text: $data, css: { red: $data < 0 }" class="align_right"></td>
            <!-- /ko -->
          </tr>
          <tr class="toggle_row growth_row">
            <td data-bind="text: growth_name"></td>
            <!-- ko foreach: growth_values -->
              <td data-bind="text: $data.percentage, css: { orange: $data.value < 0 }" class="align_right"></td>
            <!-- /ko -->
          </tr>
        <!-- /ko -->
        <tr class="bold value_row toggle_row">
          <td data-bind="text: last_item.name"></td>
          <!-- ko foreach: last_item.values -->
            <td data-bind="text: $data, css: { red: $data < 0 }" class="align_right"></td>
          <!-- /ko -->
        </tr>
        <tr class="bold growth_row toggle_row">
          <td data-bind="text: last_item.growth_name"></td>
          <!-- ko foreach: last_item.growth_values -->
            <td data-bind="text: $data.percentage, css: { orange: $data.value < 0 }" class="align_right"></td>
          <!-- /ko -->
        </tr>
      <!-- /ko -->
    </tbody>
  </table>
</div><!--// #<%= dom_id %> -->